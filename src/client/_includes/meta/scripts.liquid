{%- assign file = 'bundle' %}
{%- if env.eleventy_env == 'production' %}
  {%- assign file = 'bundle.min' %}
{%- endif %}
<script src="/js/{{ file }}.js" async></script>

{%- if scripts %}
  {%- for script in scripts %}
    <script src="{{ script.src }}"{% for parameter in script.parameters %} {{ parameter }}{% endfor %}></script>
  {%- endfor %}
{%- endif %}